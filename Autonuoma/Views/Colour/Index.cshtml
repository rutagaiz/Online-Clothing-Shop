@model IEnumerable<Org.Ktu.Isk.P175B602.Autonuoma.Models.Colour>

@{ ViewData["title"] = "Spalvos"; }

<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

<div class="main-content-lst">
	<table class="entity-list">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.First().Id)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.First().Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.First().Shade)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(m => item.Id)</td>
					<td>@Html.DisplayFor(m => item.Name)</td>
					<td>@Html.DisplayFor(m => item.Shade)</td>
					<td>
						<a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">
							<i class="fa-solid fa-pen-to-square"></i> Redaguoti
						</a>
						<a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
							<i class="fa-solid fa-trash"></i> Šalinti
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
